<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_145sdp"
    android:background="@drawable/bc_rowproduct"
    android:id="@+id/Rela_Product"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:textColor="#fff"
        android:background="#FF8080"
        android:padding="@dimen/_5sdp"
        android:maxLines="2"
        android:textSize="@dimen/_8sdp"
        android:text="ain shams"
        android:id="@+id/Title"
        />
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/icon_favorite"
        android:id="@+id/Img_Favourit"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:text="Ahmed Mansour"
        android:maxLines="1"
        android:layout_below="@+id/img_product"
        android:id="@+id/T_title"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_below="@+id/Img_Favourit"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/diamong"
        android:id="@+id/img_product"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:textColor="#CECECE"
        android:text="Ahmed Mansour"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_below="@+id/T_title"
        android:id="@+id/T_Caliber"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/T_Caliber"
        android:background="#DBDBDB"
        android:id="@+id/view"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="#000"
        android:text="3000 $"
        android:maxLines="1"
        android:layout_below="@+id/view"
        android:id="@+id/T_Price"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="#B8B8B8"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_9sdp"
        android:text="3000 $"
        android:maxLines="1"
        android:layout_below="@+id/view"
        android:id="@+id/T_OfferPrice"
        />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/icon_cart"
        android:id="@+id/Img_Cart"
        android:layout_below="@+id/view"
        android:layout_marginBottom="@dimen/_10sdp"
        />

    <ProgressBar
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_30sdp"
        android:id="@+id/progross"
        android:visibility="invisible"
        />
</RelativeLayout>